<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>

        <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox"
               size="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field name="title" type="text" filter="raw" required="true"
               label="COM_WEBPUSH_FORM_LBL_NOTIFICATION_TEMPLATE_TITLE"
               description="COM_WEBPUSH_FORM_DESC_NOTIFICATION_TEMPLATE_TITLE"
               hint="COM_WEBPUSH_FORM_LBL_NOTIFICATION_TEMPLATE_TITLE"/>

        <field name="message" type="textarea" filter="raw" required="true"
               label="COM_WEBPUSH_FORM_LBL_NOTIFICATION_TEMPLATE_MESSAGE"
               description="COM_WEBPUSH_FORM_DESC_NOTIFICATION_TEMPLATE_MESSAGE"
               hint="COM_WEBPUSH_FORM_LBL_NOTIFICATION_TEMPLATE_MESSAGE"/>

        <field name="icon" type="media" directory="/images/" label="COM_WEBPUSH_FORM_LBL_NOTIFICATION_TEMPLATE_ICON"
               description="COM_WEBPUSH_FORM_DESC_NOTIFICATION_TEMPLATE_ICON"
               hint="COM_WEBPUSH_FORM_LBL_NOTIFICATION_TEMPLATE_ICON"/>

        <field name="url" type="url" validate="url" label="COM_WEBPUSH_FORM_LBL_NOTIFICATION_TEMPLATE_URL"
               description="COM_WEBPUSH_FORM_DESC_NOTIFICATION_TEMPLATE_URL"
               hint="COM_WEBPUSH_FORM_LBL_NOTIFICATION_TEMPLATE_URL"/>

        <field name="created_by" type="createdby" default="0"
               label="COM_WEBPUSH_FORM_LBL_NOTIFICATION_TEMPLATE_CREATED_BY"
               description="COM_WEBPUSH_FORM_DESC_NOTIFICATION_TEMPLATE_CREATED_BY" hidden="true"
               hint="COM_WEBPUSH_FORM_LBL_NOTIFICATION_TEMPLATE_CREATED_BY"/>

        <field name="modified_by" type="modifiedby" default="0"
               label="COM_WEBPUSH_FORM_LBL_NOTIFICATION_TEMPLATE_MODIFIED_BY"
               description="COM_WEBPUSH_FORM_DESC_NOTIFICATION_TEMPLATE_MODIFIED_BY" hidden="true"
               hint="COM_WEBPUSH_FORM_LBL_NOTIFICATION_TEMPLATE_MODIFIED_BY"/>

        <field name="created_on" default="0000-00-00 00:00:00" type="calendar" class="inputbox" filter="safehtml"
               format="%Y-%m-%d %H:%M:%S" label="COM_WEBPUSH_FORM_LBL_NOTIFICATION_TEMPLATE_CREATED_ON"
               description="COM_WEBPUSH_FORM_DESC_NOTIFICATION_TEMPLATE_CREATED_ON" hidden="true"
               hint="COM_WEBPUSH_FORM_LBL_NOTIFICATION_TEMPLATE_CREATED_ON"/>

        <field name="modified_on" default="0000-00-00 00:00:00" type="calendar" class="inputbox" filter="safehtml"
               format="%Y-%m-%d %H:%M:%S" label="COM_WEBPUSH_FORM_LBL_NOTIFICATION_TEMPLATE_MODIFIED_ON"
               description="COM_WEBPUSH_FORM_DESC_NOTIFICATION_TEMPLATE_MODIFIED_ON" hidden="true"
               hint="COM_WEBPUSH_FORM_LBL_NOTIFICATION_TEMPLATE_MODIFIED_ON"/>

        <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
               description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
    </fieldset>
</form>
